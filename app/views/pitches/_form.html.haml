= form_for @pitch, :class => 'form-inline' do |f|
  - if @pitch.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pitch.errors.count, "error")} prohibited this pitch from being saved:"
      %ul
        - @pitch.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :pitcher, :class =>'input-xlarge', :placeholder => 'Your Name'
  .field
    = f.text_field :name, :class =>'input-xlarge', :placeholder => 'Pitch Name'
  .field
    = f.hidden_field :tokbox_id
  .field
    = f.hidden_field :twilio_number
  .actions
    = f.submit "Gim'me Pitchback!", :class =>'btn btn-info btn-large', :style => 'margin-top:20px;padding:30px 60px;font-size:26px'


